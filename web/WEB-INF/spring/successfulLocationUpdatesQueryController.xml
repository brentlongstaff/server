<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">
  <!--  
     Spring ApplicationContext configuration for HTML form-based prompt/survey response visualizations 
  -->
  
  <!-- Servlet-to-AW hooks -->
  <bean id="userOnlyAwRequestCreator" class="edu.ucla.cens.awserver.jee.servlet.glue.UserOnlyAwRequestCreator" />
  
  <!-- Write outbound data -->
  <bean id="successfulLocationUpdatesQueryResponseWriter" class="edu.ucla.cens.awserver.jee.servlet.writer.SuccessfulLocationUpdatesQueryResponseWriter" />
  
    
  <!-- Controller -->
  <bean id="successfulLocationUpdatesQueryController" class="edu.ucla.cens.awserver.controller.ControllerImpl">
    <constructor-arg index="0">
      <list>
        <ref bean="successfulLocationUpdatesQueryService" />
      </list>
    </constructor-arg>
    <property name="featureName"><value>successful location updates percentage query</value></property>
  </bean>
  
  <!-- Service the query request -->
  <bean id="successfulLocationUpdatesQueryService" class="edu.ucla.cens.awserver.service.SuccessfulLocationUpdatesQueryService">
    <constructor-arg index="0">
      <ref bean="userRoleCacheService" />
    </constructor-arg>
    <constructor-arg index="1">
      <ref bean="singleUserSuccessfulLocationUpdatesQueryDao" />
    </constructor-arg>
    <constructor-arg index="2">
      <ref bean="multiUserSuccessfulLocationUpdatesQueryDao" />
    </constructor-arg>
  </bean>

  <!-- Interact with database -->
  <bean id="singleUserSuccessfulLocationUpdatesQueryDao" class="edu.ucla.cens.awserver.dao.SingleUserSuccessfulLocationUpdatesQueryDao">
    <constructor-arg index="0"><ref bean="dataSource" /></constructor-arg>
  </bean>
  <bean id="multiUserSuccessfulLocationUpdatesQueryDao" class="edu.ucla.cens.awserver.dao.MultiUserSuccessfulLocationUpdatesQueryDao">
    <constructor-arg index="0"><ref bean="dataSource" /></constructor-arg>
    <constructor-arg index="1"><ref bean="findAllUsersForCampaignDao" /></constructor-arg>
  </bean>
  <bean id="findAllUsersForCampaignDao" class="edu.ucla.cens.awserver.dao.FindAllUsersForCampaignDao">
    <constructor-arg index="0"><ref bean="dataSource" /></constructor-arg>
  </bean>
  
</beans>
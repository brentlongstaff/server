<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">

  <bean id="formBasedLoginUserNameValidator" class="edu.ucla.cens.awserver.validator.AwRequestUserNameValidator">
    <constructor-arg index="0"><value>[a-z\.]{9,15}</value></constructor-arg>
    <constructor-arg index="1"><ref bean="failedRequestAnnotator" /></constructor-arg>
  </bean>
  
  <bean id="formBasedLoginPasswordValidator" class="edu.ucla.cens.awserver.validator.AwRequestPasswordValidator">
    <constructor-arg index="0"><value>[a-z\.]{9,15}</value></constructor-arg>
    <constructor-arg index="1"><ref bean="failedRequestAnnotator" /></constructor-arg>
  </bean>
  
  <bean id="uploadUserNameValidator" class="edu.ucla.cens.awserver.validator.AwRequestUserNameValidator">
    <constructor-arg index="0"><value>[a-z\.]{9,15}</value></constructor-arg>
    <constructor-arg index="1"><ref bean="uploadUserNameFailedJsonRequestAnnotator" /></constructor-arg>
  </bean>
  
  <bean id="uploadPasswordValidator" class="edu.ucla.cens.awserver.validator.AwRequestPasswordValidator">
    <constructor-arg index="0"><value>[\w\.\$\/]{50,60}</value></constructor-arg>
    <constructor-arg index="1"><ref bean="uploadPasswordFailedJsonRequestAnnotator" /></constructor-arg>
  </bean>
  
  <bean id="uploadCampaignIdValidator" class="edu.ucla.cens.awserver.validator.AwRequestCampaignIdValidator">
    <constructor-arg index="0"><ref bean="uploadCampaignIdFailedJsonRequestAnnotator" /></constructor-arg>
  </bean>
  

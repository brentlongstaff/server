  <bean id="uploadJsonDataExistsValidator" class="edu.ucla.cens.awserver.validator.NonEmptyStringAnnotatingValidator">
    <constructor-arg index="0"><ref bean="uploadJsonDataFailedJsonRequestAnnotator" /></constructor-arg>
    <constructor-arg index="1"><value>jsonDataAsString</value></constructor-arg>
  </bean>
  
  <bean id="uploadUserNameFailedJsonRequestAnnotator" class="edu.ucla.cens.awserver.validator.json.FailedJsonRequestAnnotator">
    <constructor-arg index="0">
      <bean class="edu.ucla.cens.awserver.domain.ErrorResponse">
        <property name="code" value="0200" />
        <property name="text" value="authentication failed" />
      </bean>
    </constructor-arg>
  </bean>
  

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">
  <!--  
     Spring ApplicationContext configuration for hours-since-last-update query 
  -->
  
  <!-- Servlet-to-AW hooks -->
  
  <!-- Write outbound data -->
  <bean id="mostRecentActivityQueryResponseWriter" class="edu.ucla.cens.awserver.jee.servlet.writer.MostRecentActivityQueryResponseWriter" />
    
  <!-- Controller -->
  <bean id="mostRecentActivityQueryController" class="edu.ucla.cens.awserver.controller.ControllerImpl">
    <constructor-arg index="0">
      <list>
        <ref bean="mostRecentActivityQueryService" />
      </list>
    </constructor-arg>
    <property name="featureName"><value>most recent activity query</value></property>
  </bean>
  
  <!-- Service the query request -->
  <bean id="mostRecentActivityQueryService" class="edu.ucla.cens.awserver.service.MostRecentActivityQueryService">
    <constructor-arg index="0">
      <ref bean="userRoleCacheService" />
    </constructor-arg>
    <constructor-arg index="1">
      <ref bean="singleUserMostRecentActivityQueryDao" />
    </constructor-arg>
    <constructor-arg index="2">
      <ref bean="multiUserMostRecentActivityQueryDao" />
    </constructor-arg>
  </bean>

  <!-- Interact with database -->
  <bean id="singleUserMostRecentActivityQueryDao" class="edu.ucla.cens.awserver.dao.SingleUserMostRecentActivityQueryDao">
    <constructor-arg index="0"><ref bean="dataSource" /></constructor-arg>
  </bean>
  <bean id="multiUserMostRecentActivityQueryDao" class="edu.ucla.cens.awserver.dao.MultiUserMostRecentActivityQueryDao">
    <constructor-arg index="0"><ref bean="dataSource" /></constructor-arg>
    <constructor-arg index="1"><ref bean="findAllUsersForCampaignDao" /></constructor-arg>
  </bean>
  
</beans>
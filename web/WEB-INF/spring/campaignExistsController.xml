<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">

  <!--  Servlet-to-AW hooks -->
    
  <!--  Main Controller -->
  <bean id="campaignExistsController" class="edu.ucla.cens.awserver.controller.ControllerImpl">
      <constructor-arg index="0">
        <list>
          <ref bean="campaignExistsService" />
        </list>
      </constructor-arg>
       <property name="featureName"><value>campaign existence check</value></property>
  </bean>
  
  <bean id="campaignExistsService" class="edu.ucla.cens.awserver.service.CampaignExistsService">
    <constructor-arg index="0">
      <ref bean="campaignExistsDao" />
    </constructor-arg>
    <constructor-arg index="1">
      <ref bean="campaignExistsFailedRequestAnnotator" />
    </constructor-arg>
    <constructor-arg index="2">
      <value>campaign not found</value>
    </constructor-arg>
  </bean>

  <bean id="campaignExistsDao" class="edu.ucla.cens.awserver.dao.CampaignExistsDao">
    <constructor-arg index="0"><ref bean="dataSource" /></constructor-arg>
  </bean>

  <bean id="campaignExistsFailedRequestAnnotator" class="edu.ucla.cens.awserver.validator.json.FailedJsonRequestAnnotator">
    <constructor-arg index="0">
      <value>{"errors":[{"error_code":"0100","error_text":"subdomain does not exist"}]}</value>
    </constructor-arg>
  </bean>

</beans>
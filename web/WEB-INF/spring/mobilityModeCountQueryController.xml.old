<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">
  <!--  
     Spring ApplicationContext configuration for aggregate mobility mode count queries 
  -->
  
  <!-- Servlet-to-AW hooks -->
  <!-- Write outbound data -->
  <bean id="mobilityModeCountQueryResponseWriter" class="edu.ucla.cens.awserver.jee.servlet.writer.MobilityModeCountQueryResponseWriter" />
    
  <!-- Controller -->
  <bean id="mobilityModeCountQueryController" class="edu.ucla.cens.awserver.controller.ControllerImpl">
    <constructor-arg index="0">
      <list>
        <ref bean="mobilityModeCountQueryService" />
      </list>
    </constructor-arg>
    <property name="featureName"><value>mobility mode count query</value></property>
  </bean>
  
  <!-- Service the query request -->
  <bean id="mobilityModeCountQueryService" class="edu.ucla.cens.awserver.service.MobilityModeCountQueryService">
    <constructor-arg index="0">
      <ref bean="userRoleCacheService" />
    </constructor-arg>
    <constructor-arg index="1">
      <ref bean="singleUserMobilityModeCountQueryDao" />
    </constructor-arg>
    <constructor-arg index="2">
      <ref bean="multiUserMobilityModeCountQueryDao" />
    </constructor-arg>
  </bean>

  <!-- Interact with database -->
  <bean id="singleUserMobilityModeCountQueryDao" class="edu.ucla.cens.awserver.dao.SingleUserMobilityModeCountQueryDao">
    <constructor-arg index="0"><ref bean="dataSource" /></constructor-arg>
  </bean>
  <bean id="multiUserMobilityModeCountQueryDao" class="edu.ucla.cens.awserver.dao.MultiUserMobilityModeCountQueryDao">
    <constructor-arg index="0"><ref bean="dataSource" /></constructor-arg>
    <constructor-arg index="1"><ref bean="findAllUsersForCampaignDao" /></constructor-arg>
  </bean>
  
</beans>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

  <!-- cache and provide accessibility to campaign configurations -->

  <bean id="configurationCacheService" class="edu.ucla.cens.awserver.cache.ConfigurationCacheService">
    <constructor-arg index="0">
      <bean class="edu.ucla.cens.awserver.dao.ConfigurationDao">
        <constructor-arg index="0">
          <ref bean="dataSource" />
        </constructor-arg>
        <constructor-arg index="1">
          <bean class="edu.ucla.cens.awserver.domain.SurveyMapFromXmlBuilder" />
        </constructor-arg>
      </bean>
    </constructor-arg>
  </bean>

</beans>

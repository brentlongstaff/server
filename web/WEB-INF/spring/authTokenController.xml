<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">
  <!--  
     Spring ApplicationContext configuration for HTML form-based authentication 
  -->
  
  <!-- Servlet-to-AW hooks -->
  <!-- shared with authStatelessController -->  
  
  <!-- except for the ResponseWriter ... -->
  <!-- generate output -->
  <bean id="authTokenResponseWriter" class="edu.ucla.cens.awserver.jee.servlet.writer.TokenAuthResponseWriter">
    <constructor-arg index="0"><ref bean="severeErrorResponse" /></constructor-arg>
  </bean>
    
  <!-- Controller -->
  <bean id="authTokenController" class="edu.ucla.cens.awserver.controller.ControllerImpl">
    <constructor-arg index="0">
      <list>
        <ref bean="authWithClearTextPasswordService" />
        <ref bean="addUserToBinService" />
      </list>
    </constructor-arg>
    <constructor-arg index="1">
      <ref bean="serverErrorRequestAnnotator" />
    </constructor-arg>
    <property name="validators">
      <list>
        <ref bean="userNameValidator" />
        <ref bean="clearTextPasswordValidator" />
      </list>      
    </property>
    <property name="featureName"><value>stateful authentication</value></property>
  </bean>
  
  <!-- Authentication -->
  <bean id="authWithClearTextPasswordService" class="edu.ucla.cens.awserver.service.AuthenticationService">
    <constructor-arg index="0">
      <ref bean="authWithClearTextPasswordDao" />
    </constructor-arg>
    <constructor-arg index="1">
      <bean class="edu.ucla.cens.awserver.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0"> 
          <bean class="edu.ucla.cens.awserver.domain.ErrorResponse">
            <property name="code" value="0200" />
            <property name="text" value="authentication failed" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="2">
      <bean class="edu.ucla.cens.awserver.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="edu.ucla.cens.awserver.domain.ErrorResponse">
            <property name="code" value="0201" />
            <property name="text" value="user not enabled for access" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="3">
      <bean class="edu.ucla.cens.awserver.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="edu.ucla.cens.awserver.domain.ErrorResponse">
            <property name="code" value="0202" />
            <property name="text" value="default password disallowed" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="4"><value>false</value></constructor-arg> <!--  toggle whether new accounts are allowed access -->
  </bean>
 
  <!-- Interact with database -->
  <bean id="authWithClearTextPasswordDao" class="edu.ucla.cens.awserver.dao.AuthenticationDao">
    <constructor-arg index="0"><ref bean="dataSource" /></constructor-arg>
    <constructor-arg index="1"><value>$2a$04$r8zKliEptVkzoiQgD833Oe</value></constructor-arg>
    <constructor-arg index="2"><value>true</value></constructor-arg>
  </bean>
  
  <bean id="addUserToBinService" class="edu.ucla.cens.awserver.service.AddUserToBinService">
    <constructor-arg index="0"><ref bean="userBin" /></constructor-arg>
  </bean>
	
</beans>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">
  <!--  
     Spring ApplicationContext configuration for HTML form-based prompt/survey response visualizations 
  -->
  
  <!-- Servlet-to-AW hooks -->
  <!-- "pre-validate" inbound data -->
  <bean id="startAndEndDateHttpServletRequestValidator" class="edu.ucla.cens.awserver.jee.servlet.validator.StartAndEndDateValidator" />
  
  <!-- Write outbound data -->
  <bean id="promptGroupCountQueryResponseWriter" class="edu.ucla.cens.awserver.jee.servlet.writer.PromptGroupCountQueryResponseWriter" />
    
  <!-- Controller -->
  <bean id="promptGroupCountQueryController" class="edu.ucla.cens.awserver.controller.ControllerImpl">
    <constructor-arg index="0">
      <list>
        <ref bean="promptGroupCountQueryService" />
      </list>
    </constructor-arg>
    <property name="featureName"><value>prompt group count query</value></property>
  </bean>
  
  <!-- Service the query request -->
  <bean id="promptGroupCountQueryService" class="edu.ucla.cens.awserver.service.PromptGroupCountQueryService">
    <constructor-arg index="0">
      <ref bean="userRoleCacheService" />
    </constructor-arg>
    <constructor-arg index="1">
      <ref bean="campaignIdGroupIdCountCacheService" />
    </constructor-arg>
    <constructor-arg index="2">
      <ref bean="singleUserPromptGroupCountQueryDao" />
    </constructor-arg>
    <constructor-arg index="3">
      <ref bean="multiUserPromptGroupCountQueryDao" />
    </constructor-arg>
  </bean>

  <!-- Interact with database -->
  <bean id="singleUserPromptGroupCountQueryDao" class="edu.ucla.cens.awserver.dao.SingleUserPromptGroupCountQueryDao">
    <constructor-arg index="0"><ref bean="dataSource" /></constructor-arg>
  </bean>
  <bean id="multiUserPromptGroupCountQueryDao" class="edu.ucla.cens.awserver.dao.MultiUserPromptGroupCountQueryDao">
    <constructor-arg index="0"><ref bean="dataSource" /></constructor-arg>
    <constructor-arg index="1"><ref bean="findAllUsersForCampaignDao" /></constructor-arg>
  </bean>
  
  <!-- validation -->
  
  
  
  
</beans>
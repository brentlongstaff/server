<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

  <!-- the user bin and its associated cleaning task -->

  <bean id="userBin" class="edu.ucla.cens.awserver.cache.UserBin">
    <!-- user lifetime in milliseconds -->
    <constructor-arg index="0"><value>1800000</value></constructor-arg>
    <!-- how often the execution thread runs (in milliseconds) -->
    <constructor-arg index="1"><value>30000</value></constructor-arg>
  </bean>
  
</beans>
